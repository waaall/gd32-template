{
    "version": "2.0.0",
    "tasks": [
        //下面为make
        {
            "label": "build",
            "type": "shell",
            // "options": {
            //     "cwd": "${workspaceRoot}"
            // },
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        //下面为download
        // openocd -f cmsis-dap.cfg -f gd32f4xx.cfg -c init -c "reset halt" -c "wait_halt" -c "flash write_image erase build/gd32f4xx_project.elf" -c reset -c shutdown
        {
            "label": "download",
            "type": "shell",
            "command": "openocd",
            "args": [
                "-f",
                "cmsis-dap.cfg",
                "-f",
                "gd32f4xx.cfg",
                "-c init -c halt -c",
                "flash write_image erase",
                "'build/gd32f4xx_project.elf'",
                "-c reset -c shutdown"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }    
    ]
}